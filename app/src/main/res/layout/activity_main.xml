<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="32dp"
        android:text="欢迎使用门禁系统!"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
    android:id="@+id/main_button_open_door"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_marginLeft="52dp"
    android:layout_marginTop="96dp"
    android:text="开门"
    android:textSize="32sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_button_apply_access"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="30dp"
        android:text="申请访问"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_button_open_door" />

    <Button
        android:id="@+id/main_button_manage_login"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="30dp"
        android:text="管理入口"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_button_apply_access" />

</androidx.constraintlayout.widget.ConstraintLayout>