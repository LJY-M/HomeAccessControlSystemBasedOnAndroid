<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:background="@drawable/shadow_orange"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/visitor_records_layout_result"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="验证状态"
            android:textSize="32sp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/visitor_records_layout_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/visitor_records_layout_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="备注"
        android:layout_gravity="center"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/visitor_records_layout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="时间"
        android:layout_gravity="center"
        android:gravity="center"/>




</LinearLayout>